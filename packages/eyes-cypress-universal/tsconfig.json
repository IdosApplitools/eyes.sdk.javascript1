{
    "include": ["src"],
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "dist",
      "declaration": true,
      "declarationMap": false,
      "sourceMap": false,
      "target": "es2017",
      "lib": ["es2017", "dom"],
      "types": ["cypress", "node"],
      "module": "commonjs",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "downlevelIteration": true,
      "plugins": [{
        "allowModules": ["cypress"],
        "afterDeclarations": true,
    }],
  },
  "ts-node": {"transpileOnly": true},
}