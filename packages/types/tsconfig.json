{
  "compilerOptions": {
    "declarationDir": "types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,

    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "stripInternal": false,
    "removeComments": false,
  },
}