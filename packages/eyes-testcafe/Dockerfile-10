FROM testcafe/testcafe:1.10.1

# add new user
USER root

# prepare working dir
RUN mkdir /sandbox
WORKDIR /sandbox

# expose volume to mount read-only copy of the package's source code
VOLUME /sandbox

# copy manifest for installing deps as part of build
COPY package*.json .

# install project deps
RUN apk update && apk add yarn
RUN yarn
