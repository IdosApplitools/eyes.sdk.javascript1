{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "types",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,

    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "stripInternal": true,
    "removeComments": true,
    "plugins": [{
      "transform": "@applitools/api-extractor",
      "afterDeclarations": true,
      "rootFile": "./index.ts",
      "allowModules": ["playwright"],
    }]
  },
  "ts-node": {"transpileOnly": true},
}